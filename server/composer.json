{
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.1",
        "rbdwllr/reallysimplejwt": "^3.1",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "spatie/phpunit-watcher": "^1.22"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": ["global/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "./vendor/bin/phpunit --colors=always",
        "watch": "./vendor/bin/phpunit-watcher watch",
        "cov-xml": "php -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-clover cov.xml",
        "cov-html": "php -d pcov.enabled=1 vendor/bin/phpunit --coverage-html coverage"
    }
}
